# Cloudflare Services Watchdog
# Monitors all Cloudflare services every 5 minutes:
#   - cloudflare-webhook
#   - cloudflare-analytics-monitor
#   - cloudflare-autowithdraw

SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

*/5 * * * * root /opt/cloudflare-mt/scripts/cloudflare-services-watchdog.sh >/dev/null 2>&1
